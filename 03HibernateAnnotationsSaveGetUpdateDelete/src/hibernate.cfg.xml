<!DOCTYPE hibernate-configuration PUBLIC 
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
	
<hibernate-configuration>
	<session-factory>
	<!-- JDBC Hibernate Connection Configuration Properties -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/test?useSSL=false</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
	<!-- Hibernate Connection Pool Properties -->
		<property name="connection.pool_size">5</property>
	<!-- Hibernate DB Dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
	<!-- To Echo SQL Queries to stdout by Hibernate -->
		<property name="show_sql">true</property>
		<property name="hibernate.current_session_context_class">thread</property>
	</session-factory>
</hibernate-configuration>